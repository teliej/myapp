WindowManager:
    FirstWindow:
    WatchVideos:
    PlayAudiio:
    SearchVideos:
    DownloadVideos:
    DownloadPlaylist:
    DownloadChannel:
    chooser:
    


<FirstWindow>:
    name: 'first'
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: .5,.3
            text: 'welcome'
            font_size:25
            valign: 'center'
            halign: 'left'
        GridLayout:
            cols:2
            padding: ('20dp','20dp','20dp','20dp')
            spacing: '20dp','20dp'
            Button:
                text: 'Watch Videos'
                background_color: .15,.15,.15,1
                background_normal: ''
                on_press: 
                    app.root.current='Watch Videos'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Play Audio'
                background_color: .15,.15,.15,1
                background_normal: ''
                on_press: 
                    app.root.current='PlayAudiio'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Search Videos'
                background_color: .15,.15,.15,1
                background_normal: ''
                on_press: 
                    app.root.current='Search Videos'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Download Videos'
                background_color: .15,.15,.15,1
                background_normal: ''
                on_press: 
                    app.root.current='Download Videos'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Download Playlist'
                background_color: .15,.15,.15,1
                background_normal: ''
                on_press: 
                    app.root.current='Download Playlist'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Download Channel'
                background_color: .15,.15,.15,1
                background_normal: ''
                on_press: 
                    app.root.current='Download Channel'
                    root.manager.transition.direction = 'left'

<WatchVideos>:
    name:'Watch Videos'
    #BoxLayout:
        #orientation: 'vertical'
        #spacing:20
        #VideoPlayer:
        #    source: 'kolo.mp4'
        #    state: 'play'
        #    options: {'fit_mode':'contain'}



<PlayAudiio>:
    name:'PlayAudiio'

<download>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        Label:
            text: 'here deal with your download settings'
            text_size: self.size
            valign: 'center' 
            halign: 'left' 
            size_hint: 1,.3
        Button:
            text: 'ABOUT'
            on_press: root.details()
            background_normal: ''
            background_color: .1,.1,.1,1
            foreground_color: 1,1,1,1  
            size_hint: 1,.3

        Label:
            text: 'Resolution/Quality'
            text_size: self.size
            valign: 'center' 
            halign: 'left' 
            size_hint: 1,.3

        GridLayout:
            cols: 2
            padding: 5
            size_hint: 1,1
            CheckBox:
                group: 'resolution'
                on_active: root.quality(self,'high')
                size_hint_x: .15
            Label:
                text: 'High'
                text_size: self.size
                valign: 'center' 
                halign: 'left' 
            CheckBox:
                group: 'resolution'
                on_active: root.quality(self, 'medium')
                size_hint_x: .15
            Label:
                text: 'Medium'
                text_size: self.size
                valign: 'center' 
                halign: 'left' 
            CheckBox:
                group: 'resolution'
                on_active: root.quality(self, 'low')
                size_hint_x: .15
            Label:
                text: 'Low'
                text_size: self.size
                valign: 'center' 
                halign: 'left' 
        GridLayout:
            cols: 2
            padding: '0dp', '5dp'
            size_hint: 1,.5
            CheckBox:
                on_active: root.audi(self)
                size_hint_x: .15
            Label:
                text: 'Download Audio Only'
                text_size: self.size
                valign: 'center' 
                halign: 'left' 
        GridLayout:
            cols: 2
            size_hint: 1,.4
            spacing:1
            Button:
                text: 'back'
                on_press: root.rem()
                background_normal: ''
                background_color: .1,.1,.1,1
                foreground_color: 1,1,1,1
            Button:
                id: proceed
                text: 'Proceed'
                on_press: root.downl()
                background_normal: ''
                background_color: .1,.1,.1,1
                foreground_color: 1,1,1,1    

<details>:
    ScrollView:
        size_hint: 1,1
        BoxLayout:
            id: hold
            orientation: 'vertical'
            size_hint: 1,None
            Label:
                id: title
                text: 'Title: '
                font_size: 13
                size_hint: 1,None
                height:50
                valign: 'center'
                halign: 'left'
                text_size: self.size
            Label:
                id: author
                text: 'Author: '
                font_size:12
                size_hint: 1,None
                height: 30
                valign: 'center'
                halign: 'left'
                text_size: self.size
            Label:
                id: views
                text: 'Views: '
                font_size: 11
                size_hint: 1,None
                height:30
                valign: 'center'
                halign: 'left'
                text_size: self.size
            Label:
                id: duration
                text: 'Duration: '
                font_size: 11
                size_hint: 1,None
                height: 30
                valign: 'center'
                halign: 'left'
                text_size: self.size
            Label:
                text: 'DESCRIPTION'
                font_size: 15
                size_hint: 1,None
                height: 50
            Label:
                id: description
                text: 'NO DESCRIPTION'
                font_size: 12
                text_size: self.size
                size_hint: 1,None
                height: 900
                valign: 'top'

<downloading>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        Label:
            id: nofn
            text: 'hold on downloading in progress.'
            text_size: self.size
            valign: 'top' 
            halign: 'left' 
            size_hint: 1,.2
            font_size: 12
            padding: dp(1), dp(5)

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,.45
            spacing:2
            Label:
                id: title
                text: ""
                text_size: self.size
                valign: 'top' 
                halign: 'left'
                font_size: 12
                size_hint: 1,.8
                padding: dp(1), dp(5)

            ProgressBar:
                id: loading
                max: 100
                size_hint: .95,.1
                pos_hint: {"center_x":.5,"center_y":.5}
            Label:
                id: pct
                text: '0%/100%'
                font_size:11
                text_size: self.size
                valign: 'top'
                halign: 'center'

<selections>:
    size: root.width, root.height
    BoxLayout:
        pos_hint: {"x":0,"top":1}
        size_hint: 1,.2
        Button:
            id: count
            text: '0 selected'
            size_hint: .7,.3
            pos_hint: {"x":0,"top":1}
            background_normal: ''
            background_color: .15,.15,.15,1
            foreground_color: 1,1,1,1
            hint_text_color : 1,1,1,1
        Button:
            id: done
            text: 'done'
            size_hint: .3,.3
            pos_hint: {"x":0,"top":1}
            background_normal: ''
            background_color: .2,.2,.2,1
            foreground_color: 1,1,1,1
            hint_text_color : 1,1,1,1

<newplaylist>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: playlist
            multiline: False
            size_hint: .8, None
            hint_text: "Title"
            height: self.minimum_height
            background_normal: ''
            background_color: .15,.15,.15,1
            foreground_color: 1,1,1,1
            hint_text_color : 1,1,1,1

        GridLayout:
