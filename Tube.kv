            Button:
                text: 'back'
                on_press: root.rem()
                background_normal: ''
                background_color: .1,.1,.1,1
                foreground_color: 1,1,1,1
            Button:
                id: create
                text: 'Proceed'
                background_normal: ''
                background_color: .1,.1,.1,1
                foreground_color: 1,1,1,1    

<settings>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 2
        Button:
            id: play
            text: 'play'
            background_normal: ''
            background_color: .1,.1,.1,1
            foreground_color: 1,1,1,1
        Button:
            id: details
            text: 'ABOUT'
            background_normal: ''
            background_color: .1,.1,.1,1
            foreground_color: 1,1,1,1
        Button:
            id: back
            text: 'back'
            background_normal: ''
            background_color: .1,.1,.1,1
            foreground_color: 1,1,1,1
        Button:
            id: jkk
            text: 'make selection'
            background_normal: ''
            background_color: .1,.1,.1,1
            foreground_color: 1,1,1,1
        Button:
            id: newplay
