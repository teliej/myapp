<SearchVideos>:
    name:'Search Videos'

<chooser>:
    name:'chooser'
    FileChooserListView:
        id: localstorage
        #rootpath: "C:\\Users\\seye\\Downloads"
        on_selection: root.floaded(localstorage.selection)

<DownloadVideos>:
    name:'Download Videos'
    BoxLayout:
        orientation: 'vertical'
        #size_hint: 1,1
        Label:
            text: 'Download videos'
            size_hint: 1,.1
            text_size: self.size
            valign: 'center' 
            halign: 'center' 
            font_size:20
        BoxLayout:
            orientation: 'vertical'
            spacing:0
            padding:0

            BoxLayout:
                orientation: 'vertical'
                padding: dp(15), dp(0)
                spacing: 5
                size_hint: 1, None
                height: self.minimum_height
                TextInput:
                    id: title
                    size_hint: .8, None
                    multiline: False
                    hint_text: "Video Title"
                    height: self.minimum_height
                    background_normal: ''
                    background_color: .15,.15,.15,1
                    foreground_color: 1,1,1,1
                    hint_text_color : 1,1,1,1

                TextInput:
                    id: author
                    multiline: False
                    size_hint: .8, None
                    hint_text: "Author/Channel Name"
                    height: self.minimum_height
                    background_normal: ''
                    background_color: .15,.15,.15,1
                    foreground_color: 1,1,1,1
                    hint_text_color : 1,1,1,1

                BoxLayout:
                    orientation: 'vertical'
                    padding: dp(15), dp(5)
                    spacing: 5
                    size_hint: 1, None
                    height: self.minimum_height
                    Label:
                        text: 'OR'
                        text_size: self.size
                        valign: 'center' 
                        halign: 'left' 

                TextInput:
                    id: url
                    multiline: False
                    size_hint: .8, None
                    hint_text: "Video URL"
                    height: self.minimum_height
                    background_normal: ''
                    background_color: .15,.15,.15,1
                    foreground_color: 1,1,1,1
                    hint_text_color : 1,1,1,1

            BoxLayout:
                orientation: 'vertical'
                padding: dp(15), dp(20)
                spacing: 5
                size_hint: 1, None
                height: self.minimum_height
                Label:
                    text: 'OR Multiple downloads with a csv file. Columns: {title,Author/Channel Name} OR {url}'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
                    font_size: 13
            GridLayout:
                cols: 3
                padding: dp(15), dp(0)
                spacing: 0
                size_hint: 1, .2
                Label:
                    text: 'Select file ->'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left'
                Button:
                    text: 'choose a file'
                    on_press: root.gotofilefunc()
                    #app.root.current='chooser'
                    #root.manager.transition.direction = 'right'
                    size_hint: 1,1
                    background_normal: ''
                    background_color: .1,.1,.1,1
                    foreground_color: 1,1,1,1
                Label:
                    id: filebtn
                    text: ''
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
                    
            BoxLayout:
                padding: dp(15), dp(0)
                size_hint: 1,.3
                Label:
                    text: 'Number of videos to download'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 

            GridLayout:
                cols: 2
                padding: 5
                size_hint: 1,.6
                CheckBox:
                    group: 'radiobtn'
                    on_active: root.num(self, self.active, 20)
                    size_hint_x: .15
                Label:
                    text: 'first 20'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
                CheckBox:
                    group: 'radiobtn'
                    on_active: root.num(self, self.active, 50)
                    size_hint_x: .15
                Label:
                    text: 'first 50'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
                CheckBox:
                    group: 'radiobtn'
                    on_active: root.num(self, self.active, 100)
                    size_hint_x: .15
                Label:
                    text: 'first 100'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
                CheckBox:
                    group: 'radiobtn'
                    on_active: root.num(self, self.active, 'ALL')
                    size_hint_x: .15
                Label:
                    text: 'ALL'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 

            BoxLayout:
                padding: dp(15), dp(0)
                size_hint: 1,.2
                Label:
                    text: 'Resolution'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 

            GridLayout:
                cols: 2
                padding: 5
                size_hint: 1,.5
                CheckBox:
                    group: 'resolution'
                    on_active: root.quality(self, self.active, 'high')
                    size_hint_x: .15
                Label:
                    text: 'High'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
                CheckBox:
                    group: 'resolution'
                    on_active: root.quality(self, self.active, 'medium')
                    size_hint_x: .15
                Label:
                    text: 'Medium'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
                CheckBox:
                    group: 'resolution'
                    on_active: root.quality(self, self.active, 'low')
                    size_hint_x: .15
                Label:
                    text: 'Low'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
            GridLayout:
                cols: 2
                padding: '0dp', '5dp'
                size_hint: 1,.4
                CheckBox:
                    on_active: root.audi(self)
                    size_hint_x: .15
                Label:
                    text: 'Download Audio Only'
                    text_size: self.size
                    valign: 'center' 
                    halign: 'left' 
            GridLayout:
                cols: 2
                size_hint: 1,.3
                spacing:3
                Button:
                    text: 'Go back'
                    on_press: 
                        app.root.current='first'
                        root.manager.transition.direction = 'right'
                    background_normal: ''
                    background_color: .1,.1,.1,1
                    foreground_color: 1,1,1,1
                Button:
                    text: 'Download Videos'
                    on_press: root.runni()
                    background_normal: ''
                    background_color: .1,.1,.1,1
                    foreground_color: 1,1,1,1

